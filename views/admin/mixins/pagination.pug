mixin pagination(pagination)
    nav
        ul(class= "pagination")
            if (pagination.currentPage > 1)
                li(class= "page-item")
                    button(class= "page-link" page-number= pagination.currentPage - 1) Previous
            - for(let i = pagination.startPage; i <= pagination.endPage; i++)
                li(class= `page-item ${pagination.currentPage == i ? "active": "" }`)
                    button(class= "page-link" page-number= i) #{i}
            if (pagination.currentPage < pagination.totalPage)
                li(class= "page-item")
                    button(class= "page-link" page-number= pagination.currentPage + 1) Next
